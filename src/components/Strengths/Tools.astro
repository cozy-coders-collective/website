    animation: movingbackground 200s linear infinite !important;
  }

  @keyframes movingbackground {
    0% {
      transform: translate(-50%, 0);
    }
    100% {
      transform: translate(-50%, -50%);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .moving-grid-bg {
      animation: none !important;
    }
  }

